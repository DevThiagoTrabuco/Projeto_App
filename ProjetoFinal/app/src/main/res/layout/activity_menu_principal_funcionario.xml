<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MenuPrincipalFuncionario">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Quit Icon no topo direito -->
        <ImageView
            android:id="@+id/sair2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/quiticon"
            android:onClick="sair"
            android:contentDescription="Sair"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

        <!-- Logo fora da NestedScrollView -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/geriatricareonlylogo"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!-- Conteúdo com NestedScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/logoImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Título para o Primeiro HorizontalScrollView -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestão de pacientes"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/ciano"
                android:layout_marginBottom="8dp" />

            <!-- Primeiro HorizontalScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/imageCadastro"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/register"
                            android:background="@drawable/circle2"
                            android:contentDescription="Cadastrar Paciente" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Cadastrar\npaciente"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/imageEditar"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/edit"
                            android:background="@drawable/circle2"
                            android:onClick="TelaEditar"
                            android:contentDescription="Editar Dados" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:text="Editar dados\nde paciente"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Título para o Segundo HorizontalScrollView -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Segunda Sessão"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Segunda HorizontalScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Adicionar mais elementos aqui se necessário -->

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
