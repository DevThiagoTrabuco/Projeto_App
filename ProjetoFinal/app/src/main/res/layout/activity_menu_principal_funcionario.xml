<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MenuPrincipalFuncionario">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Quit Icon no topo direito -->
        <ImageView
            android:id="@+id/sair2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/quiticon"
            android:onClick="sair"
            android:contentDescription="Sair"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
             />

        <!-- Logo fora da NestedScrollView -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/geriatricareonlylogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

        <!-- Conteúdo com NestedScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/logoImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Linha separadora -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginBottom="8dp" />

            <!-- Barra de pesquisa com ícone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- EditText para pesquisa -->
                <EditText
                    android:id="@+id/editPesquisa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:hint="Pesquisar"
                    android:padding="10dp"
                    android:onClick="pesquisar"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray" />

                <!-- Ícone de Pesquisa -->
                <ImageView
                    android:id="@+id/pesquisa"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/searchicon"
                    android:contentDescription="Pesquisar"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Carrossel de Imagens (HorizontalScrollView) -->

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"

                android:paddingStart="50dp"
                android:paddingEnd="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Primeiro Item do Carrossel -->
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:src="@drawable/graphic1"
                        android:contentDescription="Imagem 1"
                        android:layout_marginEnd="16dp"
                        />

                    <!-- Segundo Item do Carrossel -->
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:src="@drawable/graphic2"
                        android:contentDescription="Imagem 2"
                        android:layout_marginEnd="16dp"
                        />

                    <!-- Terceiro Item do Carrossel -->
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:contentDescription="Imagem 3"
                        android:layout_marginEnd="16dp"
                        />

                    <!-- Quarto Item do Carrossel -->
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:contentDescription="Imagem 4"
                        android:scaleType="centerCrop" />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Título para o Primeiro HorizontalScrollView -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestão de pacientes"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/dark_cyan"
                android:layout_marginBottom="8dp" />

            <!-- Primeiro HorizontalScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/imageCadastro"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/register"
                            android:background="@drawable/circle2"
                            android:onClick="telaCadastro"
                            android:contentDescription="Cadastrar Paciente" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Cadastrar\npaciente"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/imageEditar"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/edit"
                            android:background="@drawable/circle2"
                            android:onClick="telaEditar"
                            android:contentDescription="Editar Dados" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Editar dados\n do paciente"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/imageVisaoGeral"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/profile2"
                            android:background="@drawable/circle2"
                            android:onClick="telaEditar"
                            android:contentDescription="Visão geral" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Visão geral\nde pacientes"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Título para o Segundo HorizontalScrollView -->


            <!-- Segunda HorizontalScrollView -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestão interna"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/dark_cyan"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Segunda HorizontalScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- Adicionar mais elementos aqui se necessário -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/imageEstoque"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/estoque"
                            android:background="@drawable/circle2"
                            android:onClick="telaEstoque"
                            android:contentDescription="Estoque" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Estoque"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/imageCuidadores"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/cuidadores"
                            android:background="@drawable/circle2"
                            android:onClick="telaCuidadores"
                            android:contentDescription="Cuidadores" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Visao geral de\n cuidadores"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_horizontal">

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestão financeira"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/dark_cyan"
                android:layout_marginBottom="8dp" />

            <!-- Primeiro HorizontalScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/imageDebitos"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/debitos"
                            android:background="@drawable/circle2"
                            android:onClick="telaDebitos"
                            android:contentDescription="Visao geral debitos" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Debitos e\nacordos"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/imageContratos"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/contratos"
                            android:background="@drawable/circle2"
                            android:onClick="telaContrato"
                            android:contentDescription="Contratos ativos" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Contratos\nativos"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#000000" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/imageFinanceiro"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/circle2"
                            android:contentDescription="Visão geral financeiro"
                            android:onClick="telaFinanceiro"
                            android:src="@drawable/financeiro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Visão geral\ndo financeiro"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>